FROM node:18-alpine

WORKDIR /app

# Install curl and openssl for health checks and Prisma  
RUN apk add --no-cache curl openssl

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev)
RUN npm install

# Copy source code
COPY . .

# Generate Prisma client
RUN npx prisma generate

# Expose port
EXPOSE 3001

# Start in development mode
CMD ["npm", "run", "dev"]